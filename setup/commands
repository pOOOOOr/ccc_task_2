# setup env
sudo apt-get update
sudo apt-get install -y git python-setuptools python-dev libffi-dev libssl-dev
sudo easy_install -U pip

git clone https://github.com/pOOOOOr/ccc_task_2.git
cd ccc_task_2
sudo pip install -r requirements.txt
sudo pip install requests[security] --upgrade

sudo pip install uwsgi
sudo apt-get install nginx

# crawler
./twitter_crawler_restful.py >/tmp/rest.log 2>&1 &
./twitter_crawler_streaming.py xin 0 >/tmp/stream.log 2>&1 &
./twitter_crawler_streaming.py xin2 1 >/tmp/stream.log 2>&1 &
./twitter_crawler_streaming.py nikvi 2 >/tmp/stream.log 2>&1 &
./twitter_crawler_streaming.py zoey 3 >/tmp/stream.log 2>&1 &
./twitter_crawler_streaming.py jacky 4 >/tmp/stream.log 2>&1 &

# couchdb
sudo service couchdb stop/start
curl http://localhost:5984/_active_tasks

# start web server
uwsgi uwsgi.ini
sudo nginx -s reload

# install log.io
sudo apt-get install npm
sudo apt-get install nodejs-legacy
sudo npm install -g log.io --user "ubuntu"